{{>layout/header}}
<link rel="stylesheet" href="/css/join-form.css" >

<body>
<div class="aaa">
    <div class="signup-container">
        <h2>회원가입</h2>
        <form action="/join" method="post" enctype="multipart/form-data" id="signup-form">
            <!-- 아이디 입력 및 중복확인 -->
            <div class="form-group">
                <input type="text" class="form-control" name="loginId" placeholder="아이디 입력">
               <!--
                <button type="button" class="btn btn-secondary duplicate-check" onclick="checkDuplicate('loginId')">중복확인</button>
                -->
            </div>

            <!-- 프로필 사진 등록 문구 -->
            <div class="profile-header">
                <b>프로필 사진</b>
            </div>

            <!-- 프로필 사진 및 미리보기 -->
            <div class="form-group">
                <div class="profile-input">
                    <input type="file" class="form-control" name="profile" id="profileImageInput" onchange="previewImage(event)">
                </div>
                <div id="imagePreview" class="profile-preview">
                    <img id="profileImagePreview" src="" alt="미리보기 이미지" style="display: none; max-width: 100px; max-height: 100px;"/>
                </div>
            </div>

            <!-- 비밀번호 입력 -->
            <div class="form-group">
                <input type="password" class="form-control" name="password" placeholder="비밀번호 입력">
            </div>

            <!-- 닉네임 입력 및 중복확인 -->
            <div class="form-group">
                <input type="text" class="form-control" name="nickName" placeholder="닉네임 입력">
               <!--  <button type="button" class="btn btn-secondary duplicate-check" onclick="checkDuplicate('nickname')">중복확인</button>-->
            </div>

            <!-- 이메일 입력 및 도메인 선택 -->
            <div class="form-group">
                <input type="text" class="form-control" name="email" placeholder="이메일 입력">
                <!--
                <select class="form-control" id="email_domain" onchange="toggleCustomEmail(this)">
                 //   <option value="">도메인 선택</option>
                  //  <option value="@naver.com">@naver.com</option>
                   // <option value="@google.com">@google.com</option>
                    <option value="@nate.com">@nate.com</option>
                    <option value="custom">직접 입력</option>
                </select>
                -->
            </div>
            <!-- 전화번호 입력 -->
            <div class="form-group">
                <input type="text" class="form-control" name="phone" placeholder="전화번호 입력">
            </div>

            <!-- 회원가입 버튼 -->
            <button type="submit" class="btn btn-primary btn-block mt-4">회원가입</button>
        </form>
    </div>
</div>

<script>



    //프로필 이미지 보이기
    function previewImage(event) {
        const imagePreview = document.getElementById('profileImagePreview');
        const file = event.target.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = function(e) {
                imagePreview.src = e.target.result;
                imagePreview.style.display = 'block';
            };
            reader.readAsDataURL(file);
        }
    }
</script>
</body>


