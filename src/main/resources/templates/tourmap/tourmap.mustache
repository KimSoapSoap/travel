{{>layout/header}}
<link rel="stylesheet" href="/css/tourmap.css">


<body>
<!-- 사이드바 -->
<div class="sidebar">
    <div class="loactionwe">
        <h5>지역을 선택하세요</h5>
        <!-- 지역 선택 -->
        <select id="location-selector" class="location-select">
            <option value="37.5665,126.9780">서울</option>
            <option value="36.3504,127.3845">대전</option>
            <option value="37.2752,127.0095">경기도</option>
            <option value="36.6357,127.4917">충청도</option>
            <option value="35.1796,129.0756">부산</option>
            <option value="35.8722,128.6025">대구</option>
            <option value="37.4563,126.7052">인천</option>
            <option value="35.1601,126.8514">광주</option>
        </select>

        <!-- 날씨 정보 -->
        <p id="weather-info" class="weather-info">날씨 정보를 불러오는 중...</p>
    </div>

    <!-- 카테고리 선택 버튼을 사이드바 안에 포함 -->
    <div class="category-container">
        <h5>Category</h5>
        <div class="category-grid">
            <button onclick="selectCategory('MT1')">대형마트</button>
            <button onclick="selectCategory('CS2')">편의점</button>
            <button onclick="selectCategory('OL7')">주유소</button>
            <button onclick="selectCategory('PK6')">주차장</button>
            <button onclick="selectCategory('SW8')">지하철</button>
            <button onclick="selectCategory('CT1')">문화시설</button>
            <button onclick="selectCategory('AT4')">관광명소</button>
            <button onclick="selectCategory('AD5')">숙박시설</button>
            <button onclick="selectCategory('FD6')">음식점</button>
            <button onclick="selectCategory('CE7')">카페</button>
            <button onclick="selectCategory('HP8')">병원</button>
            <button onclick="selectCategory('PM9')">약국</button>
        </div>
    </div>
</div>

<!-- 메인 콘텐츠 -->
<div class="content">
    <!-- 지도 영역 -->
    <div id="map" style="width:100%;height:500px;"></div>
</div>

<!-- 카카오맵 API -->
<script type="text/javascript" src="//dapi.kakao.com/v2/maps/sdk.js?appkey=6019dbc4f1d181142bb8b9b106a214f9&libraries=services"></script>
<script src="/js/tour-map.js"></script>
</body>

